<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%logger] \(%thread\) %msg%n</pattern>
        </encoder>
    </appender>
    <root level="all">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
